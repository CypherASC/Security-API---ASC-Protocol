# CONFIGURAÇÕES DO SERVIDOR
PORTA=3000
AMBIENTE=desenvolvimento

# SEGREDOS JWT (GERAR COM npm run gerar-chaves)
JWT_CHAVE_PRIVADA_EC=
JWT_CHAVE_PUBLICA_EC=
JWT_ACCESS_EXPIRA=15m
JWT_REFRESH_EXPIRA=7d

# CHAVES DE CRIPTOGRAFIA (GERAR COM npm run gerar-chaves)
CHAVE_CRIPTOGRAFIA_AES=
CHAVE_PRIVADA_RSA=
CHAVE_PUBLICA_RSA=

# BANCO DE DADOS
DB_TIPO=sqlite
DB_ARQUIVO=./dados/asc.db

# RATE LIMITING
RATE_LIMIT_JANELA=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGEM=http://localhost:3000

# LOGS
LOG_NIVEL=info
LOG_ARQUIVO=./logs/asc.log

# SEGURANÇA
BCRYPT_ROUNDS=12
ARGON2_MEMORIA=65536
ARGON2_ITERACOES=3
ARGON2_PARALELISMO=4

# DEMONSTRAÇÃO - NÃO USAR EM PRODUÇÃO
ADMIN_EMAIL=admin@asc.demo
ADMIN_SENHA=Admin@123Demo
ADMIN_NOME=Administrador Demo